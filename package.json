{
	"name": "japanese-kanjis-module",
	"version": "0.0.1",
	"type": "module",
	"devDependencies": {
		"@types/node": "^22.14.0",
		"@types/xml2js": "^0.4.14",
		"kanjidic2-json": "file:../kanjidic2-json",
		"typescript": "^5.8.3",
		"wireit": "^0.14.11"
	},
	"scripts": {
		"dev": "wireit",
		"build": "wireit",
		"download-kanjidic2": "wireit"
	},
	"wireit": {
		"dev": {
			"command": "node ./test.js",
			"dependencies": [
				"build"
			],
			"files": [
				"./test.js"
			]
		},
		"build": {
			"dependencies": [
				"download-kanjidic2",
				"build:ts"
			]
		},
		"build:ts": {
			"command": "tsc --pretty",
			"clean": "if-file-deleted",
			"files": [
				"./tsconfig.json",
				"./src"
			],
			"output": [
				"./lib"
			],
			"dependencies": [
				"download-kanjidic2"
			]
		},
		"download-kanjidic2": {
			"command": "wget https://www.edrdg.org/kanjidic/kanjidic2.xml.gz && gunzip kanjidic2.xml.gz",
			"output": [
				"./kanjidic2.xml.gz",
				"./kanjidic2.xml"
			],
			"files": []
		}
	},
	"files": [
		"./lib"
	],
	"exports": {
		".": {
			"default": "./lib/builder.js",
			"types": "./lib/builder.d.ts"
		}
	}
}
